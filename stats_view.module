  return "Hier komen de settings";
}

/**
 * Test-page: a menu-callback to render a list of statistics as logged in the accesslog table.
 */
function stats_view_list() {
  $out = ''; 

  $stats_database_result = db_query("SELECT * FROM accesslog a WHERE path LIKE '%s' ORDER BY timestamp DESC LIMIT %d", $path, 10);

  while ($row = db_fetch_object($stats_database_result)) {
    $out .= "at ". format_date($row->timestamp). " host ". check_plain($row->hostname) ." visited ". check_plain($row->path) ."<br />";
  }

  return $out;
}
